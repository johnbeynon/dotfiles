alias gs='git status'
alias gcm="git commit -m"
alias gca="git commit --amend --no-edit"
alias gp='git push'
alias gpom='git push origin master'
alias gphm='git push heroku master'
alias redis='redis-server /usr/local/etc/redis.conf'
alias h='heroku'
alias hs='heroku sudo'
alias hsz='heroku sudo:run zsh'
alias es='elasticsearch -f -D es.config=/usr/local/opt/elasticsearch/config/elasticsearch.yml'

alias hbash='heroku sudo run bash -a'
alias hconfig='heroku sudo config -a'
alias huser='heroku sudo user:info -x -u'
alias happs='heroku sudo apps -u'
alias happ='heroku sudo apps:info -x -a'
alias hdomains='heroku sudo domains -a'
alias hcerts='heroku sudo certs -a'
alias hps='heroku sudo ps -a'
alias hlogs='heroku sudo logs -t -a'
alias curlapi='curl -s -H "Authorization: Bearer `heroku auth:token`" '
