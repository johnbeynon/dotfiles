# changing directory to code project
function w { cd ~/workspace/$1; }
function db { cd ~/Dropbox/workspace/$1; }

# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias pull='git pull'
alias push='git push'
alias diff='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# rails
alias rs='rails s'
alias rc='rails c'
alias rsd='rails s -u'

function rsn(){
  rails new $1 -m https://github.com/johnbeynon/rails-templates/raw/master/basic.rb -f;
}

alias pg="sudo su postgres -c '/opt/local/lib/postgresql83/bin/postgres -D /opt/local/var/db/postgresql83/defaultdb'"

# commands starting with % for pasting from web
alias %=' '

alias flushdns='dscacheutil -flushcache'