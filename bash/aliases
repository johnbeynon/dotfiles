# changing directory to code project
function w { cd ~/workspace/$1; }
function db { cd ~/Dropbox/workspace/$1; }
function cf9 { cd /Applications/JRun4/servers/cfusion/cfusion-ear/cfusion-war/$1; }

# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias pull='git pull'
alias push='git push'
alias diff='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# rails
alias sc='script/console'
alias ss='script/server'
alias sg='script/generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='script/generate nifty_scaffold'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'

alias rs='rails s'
alias rc='rails c'
alias rsd='rails s -u'

# commands starting with % for pasting from web
alias %=' '

alias flushdns='dscacheutil -flushcache'
alias cfusion="/Applications/JRun4/bin/jrun -start 'cfusion'"

alias heroku_monochrome='cp credentials credentials_johnb | mv credentials_monochrome credentials'
alias heroku_johnb='cp credentials credentials_monochrome | mv credentials_johnb credentials'